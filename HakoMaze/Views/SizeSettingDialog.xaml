<Window x:Class="HakoMaze.Views.SizeSettingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HakoMaze.ViewModels"
        Title="サイズ設定ダイアログ" Width="250" Height="100">
    <Window.DataContext>
        <vm:SizeSettingDialogViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="{x:Type Label}">
            <Style.Setters>
                <Setter Property="Width" Value="50" />
                <Setter Property="Height" Value="25" />
            </Style.Setters>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Style.Setters>
                <Setter Property="Width" Value="100" />
                <Setter Property="Height" Value="25" />
            </Style.Setters>
        </Style>
    </Window.Resources>
    
    <StackPanel Orientation="Horizontal" Margin="8 8 8 8">
        <Label Grid.Row="0" Grid.Column="0">Size</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Path=Size, Mode=OneWayToSource}" />
    </StackPanel>
</Window>
